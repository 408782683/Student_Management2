<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.academicsystem.mapper.MajorMapper">
    <resultMap id="majorMap" type="com.example.academicsystem.entity.Major">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="collegeId" column="college_id"/>
        <result property="description" column="description"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.academicsystem.entity.Major" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO major(name, code, college_id, description) VALUES (#{name}, #{code}, #{collegeId}, #{description})
    </insert>

    <select id="findByCollegeId" resultMap="majorMap">
        SELECT * FROM major WHERE college_id=#{collegeId}
    </select>
</mapper>
